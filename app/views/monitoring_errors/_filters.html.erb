<div class="mm-row">
  <div class="mm-field">
    <%= f.select :error_class, options_for_select(@error_classes, params[:error_class]), { include_blank: l(:label_select_error_class) }, { class: "monitoring-select2" } %>
  </div>

  <div class="mm-field">
    <%= f.select :status_code, options_for_select(@status_codes, params[:status_code]), { include_blank: l(:label_select_status_code) }, { class: "monitoring-select2" } %>
  </div>

  <div class="mm-field">
    <%= f.select :format, options_for_select(@formats, params[:format]), { include_blank: l(:label_select_format) }, { class: "monitoring-select2" } %>
  </div>

  <div class="mm-field">
    <%= f.select :env, options_for_select(@envs, params[:env]), { include_blank: l(:label_select_env) }, { class: "monitoring-select2" } %>
  </div>

  <div class="mm-field">
    <%= f.select :user_id, options_from_collection_for_select(@users, :id, :login, params[:user_id]), { include_blank: l(:label_select_user) }, { class: "monitoring-select2" } %>
  </div>
</div>

<div class="mm-row">
  <div class="mm-field">
    <%= f.select :controller_name, options_for_select(@controller_names, params[:controller_name]), { include_blank: l(:label_select_controller_name) }, { class: "monitoring-select2" } %>
  </div>

  <div class="mm-field">
    <%= f.select :action_name, options_for_select(@action_names, params[:action_name]), { include_blank: l(:label_select_action_name) }, { class: "monitoring-select2" } %>
  </div>

  <div class="mm-field"></div>
  <div class="mm-field"></div>

  <div class="mm-field">
    <%= f.date_field :created_at_from, value: params[:created_at_from] %>
    <%= f.label :created_at_from, "-" %>
    <%= f.date_field :created_at_to, value: params[:created_at_to] %>
  </div>
</div>

<div class="mm-row">
  <div class="mm-field">
    <%= f.text_area :message, value: params[:message], rows: 5, class: 'monitoring-textarea', placeholder: l(:label_select_message) %>
  </div>
</div>

<div class="mm-row">
  <div class="mm-field"></div>

  <div>
    <%= f.submit l(:button_apply), class: 'mm-btn mm-btn--primary' %>
    <%= link_to l(:label_clear), monitoring_errors_path, class: 'mm-btn mm-btn--secondary' %>
  </div>
</div>
